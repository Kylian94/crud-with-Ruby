  <% end %>
  <div class="container mx-auto">
    <a href="/categories" class=" bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded m-2" ><i class="fa fa-arrow-left"></i> Back</a>
  </div>                
  <div class="w-full bg-white rounded shadow-lg p-8 m-4 md:max-w-sm md:mx-auto">
    <h1 class="my-4 text-3xl md:text-5xl text-purple-800 font-bold leading-tight text-center md:text-left slide-in-bottom-h1">
    <% if params[:param_1] == "edit" %>
    Edit
    <% else %>
    Add 
    <% end %> Category</h1>
    <div class="mb-4 md:flex md:flex-wrap md:justify-center">
      <%= form_for(category) do |f| %>
        <% if category.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

            <ul>
            <% category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field-group mb-4 flex flex-col align-center ">
          <label class="field-label md:ml-2" for="#category_name">Name</label>
          <%= f.text_field :name %>
        </div>
        <div class="field-group mb-4 md:w-full flex flex-col align-center">
          <label class="field-label" for="#category_desc">Description</label>
          <%= f.text_area :desc %>
        </div>
        
        <%= f.submit :id => 'submit'%>
      <% end %>
    </div>
  </div>

