    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
    </div>
  <% end %>
  <div class="container mx-auto">
    <a href="/categories" class=" bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded m-2" ><i class="fa fa-arrow-left"></i> Back</a>
  </div>                
  <div class="w-full bg-white rounded shadow-lg p-8 m-4 md:max-w-sm md:mx-auto">
    <h1 class="my-4 text-3xl md:text-5xl text-purple-800 font-bold leading-tight text-center slide-in-bottom-h1">
    <% if controller.action_name == "edit" %>
    Edit
    <% else %>
    Add 
    <% end %> Article</h1>
    <div class="mb-4 md:flex md:flex-wrap md:justify-center fade-in">
      <%= form_for(article) do |f| %>
        <% if article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
            <% article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field-group mb-4 flex flex-col align-center justify-center ">
          <label class="field-label md:ml-2" for="#article_title">Name</label>
          <%= f.text_field :title %>
        </div>
        <div class="field-group mb-4 md:w-full flex flex-col align-center">
          <label class="field-label" for="#article_category">Category</label>
          <%= f.collection_select :category_id , Category.all, :id, :name, :prompt => 'Select One' %>
        </div>
        <div class="field-group mb-4 md:w-full flex flex-col align-center">
          <label class="field-label" for="#article_desc">Description</label>
          <%= f.text_area :desc %>
        </div>
        
        <%= f.submit :id => 'submit'%>
      <% end %>
    </div>
  </div>

